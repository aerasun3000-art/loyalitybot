{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.env*)",
      "Read(./frontend/.env)",
      "Read(./frontend/.env.*)",
      "Read(./secrets/**)",
      "Read(./**/secrets/**)",
      "Read(./.streamlit/secrets.toml)",
      "Read(./service_account.json)",
      "Read(./**/*.pem)",
      "Read(./**/credentials/**)",
      "Read(./backups/**)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git commit *)",
      "Bash(*migrate*)",
      "Bash(*supabase* db*)"
    ]
  }
}
